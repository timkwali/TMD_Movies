<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TMDMovies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="heading">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/effra_std_rg</item>
    </style>

    <style name="sub_heading">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/effra_std_rg</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="more_button">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:fontFamily">@font/effra_std_rg</item>
    </style>

    <style name="category_rv">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="movie_title_category">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/effra_std_rg</item>
    </style>

    <style name="rating">
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/effra_std_rg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="retry">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/effra_std_rg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="detail_heading">
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/effra_std_rg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="detail_value">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/effra_std_rg</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/effra_std_rg</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:fontFamily">@font/effra_std_rg</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
</resources>