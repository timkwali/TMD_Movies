<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="8dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardCornerRadius="8dp">
        <ImageView
            android:id="@+id/category_movie_image_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/tmd_logo"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/category_movie_title_tv"
        style="@style/movie_title_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/category_rating_tv"
        style="@style/rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp"
        app:drawableStartCompat="@drawable/ic_round_star_24" />
</LinearLayout>